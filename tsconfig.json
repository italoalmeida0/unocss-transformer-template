{
  "compilerOptions": {
    "target": "es2021",
    "module": "ESNext",
    "lib": ["ES2021"],
    "declaration": true,
    "emitDeclarationOnly": true,
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node10",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "exclude": [
    "node_modules",
    "**/tests/**",
    "**/test/**",
    "**/*.test.ts",
    "**/*.spec.ts",
    "dist",
    "out",
  ]
}